<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="taskautomation.trigger.DateInputDialogController">

    <Label fx:id="label" text="Select the date:">
      <font>
         <Font name="Helvetica" size="18.0" />
      </font>
      <VBox.margin>
         <Insets top="10.0" />
      </VBox.margin></Label>
   <DatePicker fx:id="datePicker">
      <VBox.margin>
         <Insets right="15.0" />
      </VBox.margin>
   </DatePicker>
    <Button fx:id="okButton" alignment="CENTER" text="OK">
      <VBox.margin>
         <Insets bottom="10.0" />
      </VBox.margin></Button>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</VBox>
